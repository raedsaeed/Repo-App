<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/v_item_place_holder_image"
        android:layout_width="@dimen/image_place_holder_48dp"
        android:layout_height="@dimen/image_place_holder_48dp"
        android:layout_margin="@dimen/dp_8"
        android:background="@drawable/grey_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/v_item_place_holder_first_view"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginStart="@dimen/dp_8"
        android:background="@drawable/grey_rectangle_solid_rounded_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/v_item_place_holder_image"
        app:layout_constraintTop_toTopOf="@id/v_item_place_holder_image"
        app:layout_constraintWidth_percent=".5" />

    <View
        android:id="@+id/v_item_place_holder_second_view"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:background="@drawable/grey_rectangle_solid_rounded_24dp"
        app:layout_constraintBottom_toBottomOf="@id/v_item_place_holder_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/v_item_place_holder_image" />
</androidx.constraintlayout.widget.ConstraintLayout>